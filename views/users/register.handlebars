<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/logo.png">
      <h3 class="text-center">Account Registration</h3>
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" required name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" required name="email" value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" required name="password" value="{{password}}">
        </div>
        <div class="form-group">
          <label for="confirm_password">Confirm Password</label>
          <input type="password" class="form-control" required name="confirm_password" value="{{confirm_password}}">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-block">Register Me</button>
        </div>
      </form>
    </div>
  </div>
</div>